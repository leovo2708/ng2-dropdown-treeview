{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "removeComments": false,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "noEmitOnError": true,
        "lib": ["es2015", "dom"],
        "paths": {
            "ng2-dropdown-treeview": ["src/index"]
        },
        "typeRoots": [
            "typings",
            "node_modules/@types"
        ],
        "types": [
            "jasmine",
            "karma-fixture",
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "demo",
        "node_modules",
        "**/*.spec.ts"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true
    }
}